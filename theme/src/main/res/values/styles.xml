<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FilterSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColorPrimary">@color/text_primary_color</item>
        <item name="android:textColorHint">@color/input_hint_color</item>
        <item name="android:tint">@color/icon_tint_color</item>
    </style>
    <style name="InputStyle">
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:textColorHint">@color/input_hint_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/input_background</item>
    </style>

    <style name="MediumText">
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
</resources>